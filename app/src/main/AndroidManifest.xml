<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.graduation.farmerfriend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmerFriend"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".e_commerce.ui.ShopActivity"
            android:exported="false"
            android:label="@string/title_activity_shop"
            android:theme="@style/Theme.FarmerFriend.NoActionBar" />
        <activity
            android:name=".store.AddToStoreActivity"
            android:exported="false" />
        <activity
            android:name=".e_commerce.ui.Search.Search"
            android:exported="true" />
        <activity
            android:name=".registration.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".registration.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registration.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".IOT.IOT_Activity"
            android:exported="true"
            android:label="@string/title_activity_iot" />
        <activity
            android:name=".e_commerce.ui.cart.UserDataActivity"
            android:exported="true" />
        <activity
            android:name=".e_commerce.ui.ItemDescriptionActivity"
            android:exported="true" />
        <activity
            android:name=".e_commerce.ui.product_activity.ProductActivity"
            android:exported="true" />
        <activity
            android:name=".e_commerce.ui.deals.DealsActivity"
            android:exported="true"
            android:label="@string/title_activity_deals"
            android:theme="@style/Theme.FarmerFriend.NoActionBar" />
        <activity
            android:name=".store.StoreActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>