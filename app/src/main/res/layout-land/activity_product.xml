<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_product_appbar"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:background="#FDFCFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_product_toolbar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/relative_layout_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="enterAlways|scroll|snap|exitUntilCollapsed" />

            <TextView
                android:id="@+id/activity_product_textView_farmer_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kitten_swash"
                android:gravity="center"
                android:text="Farmer"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="130dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/activity_product_editText_search"
                app:layout_constraintHorizontal_bias="0.729"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.487" />

            <EditText
                android:id="@+id/activity_product_editText_search"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/search_icon"
                android:hint="Search"
                app:layout_constraintEnd_toStartOf="@+id/activity_product_textView_wish_list"
                app:layout_constraintHorizontal_bias="0.954"
                app:layout_constraintStart_toEndOf="@id/activity_product_textView_farmer_friend"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_product_textView_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:padding="8dp"
                app:drawableStartCompat="@drawable/ic_baseline_heart_24"
                app:layout_constraintStart_toEndOf="@id/activity_product_editText_search"
                app:layout_constraintEnd_toStartOf="@+id/activity_product_textView_cart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_product_textView_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="130dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:padding="8dp"
                app:drawableStartCompat="@drawable/ic_baseline_shopping_cart_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_product_textView_wish_list"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/activity_product_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_product_appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_products_seeds_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/tab_item_background"
                        android:padding="8dp"
                        android:src="@drawable/seeds"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/hacen_saudi_arabia"
                        android:text="Seeds"
                        android:textColor="#104A00"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_products_fertilizers_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/tab_item_background"
                        android:padding="8dp"
                        android:src="@drawable/fertilizers" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/hacen_saudi_arabia"
                        android:gravity="center"
                        android:text="Fertilizers"
                        android:textColor="#104A00"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_products_tools_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/tab_item_background"
                        android:padding="8dp"
                        android:src="@drawable/fork" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/hacen_saudi_arabia"
                        android:text="Tools"
                        android:textColor="#104A00"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/activity_product_fragment"
                android:name="com.graduation.farmerfriend.e_commerce.ui.product_activity.SeedProductsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>