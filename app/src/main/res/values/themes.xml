<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmerFriend" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#3A8C07</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Farmer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:fontFamily">@font/kitten_swash</item>
    </style>

    <style name="Theme.FarmerFriend.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FarmerFriend.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">
            @drawable/relative_layout_background
        </item>
    </style>

    <style name="Theme.FarmerFriend.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--    <style name="AppTheme.NoActionBar">-->
