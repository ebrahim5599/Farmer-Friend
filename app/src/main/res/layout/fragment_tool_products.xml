<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tool_products_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".e_commerce.ui.product_activity.ToolProductsFragment">


    <TextView
        android:id="@+id/fragment_tool_products_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hacen_saudi_arabia"
        android:text="Tools"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_tool_products_recycler_view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_tool_products_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tool_products_textview_name" />


</androidx.constraintlayout.widget.ConstraintLayout>