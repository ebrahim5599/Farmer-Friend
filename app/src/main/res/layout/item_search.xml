<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="145dp"
    android:elevation="30dp">


    <androidx.cardview.widget.CardView
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/search_image"
                android:layout_width="119dp"
                android:layout_height="138dp"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedimage" />

            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:textColor="#121111"
                app:layout_constraintStart_toEndOf="@+id/search_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/search_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:textColor="#171616"
                app:layout_constraintStart_toEndOf="@+id/search_image"
                app:layout_constraintTop_toBottomOf="@+id/search_name" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/search_fav"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="36dp"
                android:background="#E8E6E6"
                android:elevation="5dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                app:layout_constraintStart_toEndOf="@+id/search_name"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/favimage" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/search_cart"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:background="#E8E6E6"
                android:elevation="5dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                app:layout_constraintStart_toEndOf="@+id/search_fav"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/favimage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
