<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.AddToStoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/green_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/setting_background" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/fragment_more_cardview"
            android:gravity="center"
            android:text="Add New Item"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text_view"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hacen_saudi_arabia"
                    android:text="* "
                    android:textColor="#F44336"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hacen_saudi_arabia"
                    android:text="Item Name"
                    android:textSize="22sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/item_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_data_shape"
                android:hint="Enter Item Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/hacen_saudi_arabia"
                android:text="  Item Details"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/item_details_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_data_shape"
                android:hint="Enter Item Details" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hacen_saudi_arabia"
                    android:text="* "
                    android:textColor="#F44336"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hacen_saudi_arabia"
                    android:text="Number of items"
                    android:textSize="22sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/item_amount_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_data_shape"
                android:hint="Ex. 10"
                android:inputType="number" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_add_photo"
                android:visibility="gone"/>

            <Button
                android:id="@+id/upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:drawableRight="@drawable/ic_add_photo"
                android:fontFamily="@font/hacen_saudi_arabia"
                android:backgroundTint="#00796B"
                android:text="@string/upload_image"
                android:textSize="22sp" />

            <Button
                android:id="@+id/add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hacen_saudi_arabia"
                android:backgroundTint="#00796B"
                android:text="@string/add_item"
                android:textSize="22sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>