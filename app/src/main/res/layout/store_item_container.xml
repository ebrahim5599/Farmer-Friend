<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/store_item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/no_product" />

            <TextView
                android:id="@+id/activity_store_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/store_item_amount"
                android:layout_toEndOf="@id/store_item_image"
                android:fontFamily="@font/hacen_saudi_arabia"
                android:text="Mint"
                android:textColor="@color/grey_Cart_Item_Name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/store_item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/grey_round_shape"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true">

                <ImageButton
                    android:id="@+id/activity_store_imageButton_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/grey_round_shape"
                    app:srcCompat="@drawable/ic_baseline_remove_24" />

                <TextView
                    android:id="@+id/activity_store_item_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/shape_without_borders"
                    android:paddingHorizontal="8dp"
                    android:text="200"
                    android:textColor="@color/grey_card_Container_text"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/activity_store_imageButton_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/grey_round_shape"
                    app:srcCompat="@drawable/ic_baseline_add_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/activity_store_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_store_item_name"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/store_item_image"
                android:fontFamily="@font/hacen_saudi_arabia"
                android:text="mint is very useful to us, bla bla bla"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>