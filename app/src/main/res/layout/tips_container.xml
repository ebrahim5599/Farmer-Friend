<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/home_news_and_ecommerce_container_shape"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp">
    <TextView
        android:id="@+id/tips_container_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mainText"
        android:text="gardening tips for soil preparation"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/tips_container_content_text_view"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding organic matter in the form of compost and aged manure, or using mulch or growing cover crops (green manures), is the best way to prepare soil for planting ..."
        android:textSize="16sp"/>


</LinearLayout>